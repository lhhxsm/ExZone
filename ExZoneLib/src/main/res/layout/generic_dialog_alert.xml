<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/grid_35"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_alert_rounded"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/grid_3"
        android:layout_marginRight="@dimen/grid_3"
        android:layout_marginTop="@dimen/grid_3"
        android:textSize="@dimen/headline"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/grid_3"
        android:layout_marginRight="@dimen/grid_3"
        android:layout_marginTop="@dimen/grid_3"
        android:lineSpacingExtra="@dimen/subhead_line_spacing_extra"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/subhead"/>

    <Button
        android:id="@+id/ok_button"
        style="@style/BorderButton"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/grid_3"
        android:text="@string/sure"/>

</LinearLayout>
